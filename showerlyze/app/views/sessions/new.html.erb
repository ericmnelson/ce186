<!-- app/views/sessions/new.html.erb -->
<% content_for :head do %>
  <title>WowShow! | Log in</title>
<% end %>
<h1 class="logo-name text-center">WowShow!</h1>
<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <h3>Welcome to WowShow!</h3>
        <p> An app to analyze showers and lower your carbon footprint.</p>
        <p>Login in to see it in action.</p>
        <%= form_tag '/login', {:class => 'm-t', "data-parsley-validate" => ''} do %>
            <div class="form-group">
                <%= text_field_tag :email, "", {class: "form-control", placeholder: "Email", :required => ''} %>
            </div>
            <div class="form-group">
                <%= password_field_tag :password, "", {class: "form-control", placeholder: "Password", :required => ''} %>
            </div>
            <%= submit_tag "Login", class: "btn btn-white block full-width m-b" %>
            <a href="#"><small>Forgot password?</small></a>
            <p class="text-muted text-center"><small>Do not have an account?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="<%= url_for :controller => 'users', :action => 'new' %>">Create an account</a>
        <% end %>
        <p class="m-t"> <small>WowShow! 2016. Made with â™¥ by Giorgia, Eric, Jake, and Carol</small> </p>
    </div>
</div>
