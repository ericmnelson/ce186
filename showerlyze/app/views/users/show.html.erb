<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-sparklines/2.1.2/jquery.sparkline.min.js"></script>
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="http://d3js.org/d3.v3.min.js" language="JavaScript"></script>
<style> .liquidFillGaugeText { font-family: Helvetica; font-weight: bold; }</style>
<p id="notice">
  <%= notice %>
</p>
<div class="wrapper wrapper-content">
  <div class="row animated fadeInRight">
    <div class="col-md-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Profile Detail</h5>
        </div>
        <div>
          <div class="ibox-content profile-content">
            <div class="row">
              <div class="col-md-10 col-md-offset-1 text-center">
                <img alt="image" class="img-responsive img-circle" style="display:inline" src="<%= @user.avatar.url(:thumb) %>">
                <h4><strong><%= @user.full_name %> </strong></h4>
                <p><i class="fa fa-home"></i>
                  <%= @user.house.name if @user.house%>
                </p>
                <h5 class="m-b-md">House Rank:
                  <span class="text-navy">
                    <i class="fa fa-play fa-rotate-270 m-l-sm"></i> 1<sup>st</sup>
                  </span>
                </h5>
              </div>
            </div>
            <% if @user==current_user %>
            <div class="user-button">
              <div class="row text-center">
                <%= form_for(@user, multipart: true) do |f| %>
                  <div class="col-md-6">
                    <%= f.file_field :avatar, :class => "btn-theme", :data => {"filename-placement" => "inside"} %>
                  </div>
                  <div class="col-md-6">
                    <%= f.submit 'Upload Pic', :class => "btn-primary btn-block " %>
                  </div>
                <% end %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-content">
              <h4>Percentage of total house's water consumption</h4>
              <svg class="m-t-sm" id="fillgauge1" width="100%" height="150"></svg>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5>Avg.</h5>
                <h2>198 009</h2>
                <div id="sparkline1"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5>Visits in last 24h</h5>
                <h2>198 009</h2>
                <div id="sparkline3"></div>
            </div>
        </div>
    </div>
      <div class="col-md-9">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <h5>Shower Data</h5>
            <div class="ibox-tools">
              <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
              </a>
              <a class="close-link">
                <i class="fa fa-times"></i>
              </a>
            </div>
          </div>
          <div class="ibox-content">
            <div>
              <div id="shower_data_chart" class="feed-activity-list">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
