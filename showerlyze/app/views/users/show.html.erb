<p id="notice">
  <%= notice %>
</p>
<div class="wrapper wrapper-content">
  <div class="row animated fadeInRight">
    <div class="col-md-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Profile Detail</h5>
        </div>
        <div>
          <div class="ibox-content profile-content">
            <div class="row">
              <div class="col-md-10 col-md-offset-1 text-center">
                <img alt="image" class="img-responsive img-circle" style="display:inline" src="<%= @user.avatar.url(:thumb) %>">
                <h4><strong><%= @user.full_name %> </strong></h4>
                <p><i class="fa fa-home"></i>
                  <%= @user.house.name if @user.house%>
                </p>
              </div>
            </div>
            <% if @user==current_user %>
            <div class="user-button">
              <div class="row text-center">
                <%= form_for(@user, multipart: true) do |f| %>
                  <div class="col-md-6">
                    <%= f.file_field :avatar, :class => "btn-theme", :data => {"filename-placement" => "inside"} %>
                  </div>
                  <div class="col-md-6">
                    <%= f.submit 'Upload Pic', :class => "btn-primary btn-block " %>
                  </div>
                <% end %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Activites</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <div>
            <div class="feed-activity-list">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
<script>
  $(document).ready(function() {
    $('input[type=file]').bootstrapFileInput();

  })
</script>
